---
import Page from "../layouts/Page.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<Page title="Wuz" description="Hello there.">
  <section class="about flow">
    <h1>Hey, I'm Conlin.</h1>
    <h2>Software engineer &amp; Tech Lead Manager</h2>
    <p>
      I'm a software engineer and manager from Indianapolis. I strive to build
      performant, accessible technology that helps people live better lives.
    </p>

    <h2>Latest posts</h2>
    <ul>
      {
        posts.map((post) => (
          <li>
            <FormattedDate date={post.data.pubDate} />{" "}
            <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
          </li>
        ))
      }
    </ul>
  </section>
</Page>

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
    gap: 16px;
  }
  ul li :global(time) {
    flex: 0 0 130px;
    font-style: italic;
    color: var(--foregroundMutedColor);
  }
  ul li a {
    color: var(--brandColor);
  }
  ul li a:visited {
    color: var(--purplePing);
  }
</style>
