---
import "@fontsource-variable/inter";
import "@fontsource/ibm-plex-mono/500.css";
import "@fontsource/ibm-plex-mono/400.css";
---

<style is:global>
  :root {
    --alpha: 1.0;
    --overCast: rgba(128,131,145,var(--alpha));
    --grayHaze: rgba(209,226,232,var(--alpha));
    --snowCrash: rgba(241,241,241,var(--alpha));
    --shadowAura: rgba(11,25,31,var(--alpha));
    --terminalDreams: rgba(18,18,19,var(--alpha));
    --purplePing: rgba(190,115,255, var(--alpha));
    --relayRed: rgba(255,95,92, var(--alpha));
    --electricBlue: rgba(115,255,255, var(--alpha));
    --hackerPink: rgba(255,44,117,var(--alpha));
    --brandColor: var(--hackerPink);
    --backgroundColor: var(--snowCrash);
    --foregroundColor: var(--terminalDreams);
    --foregroundMutedColor: var(--overCast);
    --highlightColor: var(--brandColor);

    --size-base: clamp(1rem, 0.96rem + 0.22vw, 1.125rem);
    --size-step-0: clamp(0.8125rem, 0.79rem + 0.11vw, 0.875rem);
    --size-step-1: clamp(1.1875rem, 1.12rem + 0.33vw, 1.375rem);
    --size-step-2: clamp(1.4375rem, 1.33rem + 0.54vw, 1.75rem);
    --size-step-3: clamp(1.6875rem, 1.51rem + 0.87vw, 2.1875rem);
    --size-step-4: clamp(2.0625rem, 1.85rem + 1.09vw, 2.6875rem);

    @media (prefers-color-scheme: dark) {
      --backgroundColor: var(--terminalDreams);
      --foregroundColor: var(--snowCrash);
      --foregroundMutedColor: var(--overCast);
    }
  }

  [data-highlighted-chars] {
    border-radius: 2px;
    padding: 0 4px 1px;
    background: rgba(255, 44, 117, 0.3);
  }

  *,
  *:after,
  *:before {
    box-sizing: border-box;
  }

  body {
    position: relative;
    font-family: "Inter", sans-serif;
    font-size: 16px;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: left;
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.5;
    color: var(--foregroundColor);
    background: var(--backgroundColor);
  }


  blockquote,
  dl,
  figcaption,
  li,
  p {
    max-width: 65ch;
  }


  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "IBM Plex Mono", monospace;
    margin: 0;
  }

  .flow > * + * {
    margin-top: 1em;
  }

  :is(h1, h2, h3) {
    font-weight: 500;
    display: flex;
    gap: 1ch;
    line-height: 1.2;
    &:before {
      color: var(--foregroundMutedColor);
    }
  }

  h1 {
    font-size: var(--size-step-3);
    &:before {
      content: "#";
      margin-inline-start: -2ch;
    }
  }

  h2 {
    font-size: var(--size-step-2);
    &:before {
      content: "##";
      margin-inline-start: -3ch;
    }
  }

  h3 {
    font-size: var(--size-step-1);
    &:before {
      content: "###";
      margin-inline-start: -4ch;
    }
  }

  h4 {
    font-size: var(--size-step-0);
  }

  h5 {
    font-size: var(--size-step-0);
  }

  h6 {
    font-size: var(--size-step-0);
  }

  a {
    color: var(--highlightColor);
  }

  nav a {
    margin-right: 10px;
  }

  textarea {
    width: 100%;
    font-size: 16px;
  }

  input {
    font-size: 16px;
  }

  content {
    line-height: 1.6;
  }

  table {
    width: 100%;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  blockquote {
    border-left: 3px solid var(--brandColor);
    color: var(--foregroundColor);
    padding: 2px 0px 2px 20px;
  }

  hr {
    border-top: 1px solid #ddd;
    margin: 1rem 0;
  }

  span[title] {
    background-image: linear-gradient(
        45deg,
        transparent 65%,
        var(--brandColor) 80%,
        transparent 90%
      ),
      linear-gradient(
        135deg,
        transparent 5%,
        var(--brandColor) 15%,
        transparent 25%
      ),
      linear-gradient(
        135deg,
        transparent 45%,
        var(--brand) 55%,
        transparent 65%
      ),
      linear-gradient(
        45deg,
        transparent 25%,
        var(--brandColor) 35%,
        transparent 50%
      );
    background-repeat: repeat-x;
    background-size: 8px 2px;
    background-position: 0 95%;
  }

  [style*="--aspect-ratio"] > :first-child {
    width: 100%;
  }

  [style*="--aspect-ratio"] > img {
    height: auto;
  }

  @supports (--custom: property) {
    [style*="--aspect-ratio"] {
      position: relative;
    }
    [style*="--aspect-ratio"]::before {
      content: "";
      display: block;
      padding-bottom: calc(100% / (16 / 9));
    }
    [style*="--aspect-ratio"] > :first-child {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
    }
  }

  ul {
    list-style: "-";
  }

  code {
    padding: 4px 4px;
  }

  pre > code {
    display: grid;
    overflow: auto;
    padding: 8px 4px;
  }

  code {
    counter-reset: line;
  }
  
  code > [data-line]::before {
    counter-increment: line;
    content: counter(line);
  
    /* Other styling */
    display: inline-block;
    width: 1rem;
    margin-right: 2rem;
    text-align: right;
    color: gray;
  }
  
  code[data-line-numbers-max-digits='2'] > [data-line]::before {
    width: 2rem;
  }
  
  code[data-line-numbers-max-digits='3'] > [data-line]::before {
    width: 3rem;
  }
</style>
