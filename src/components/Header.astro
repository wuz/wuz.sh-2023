---
import { Image } from "@astrojs/image/components";
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import logo from "../assets/logo.svg";
---

<header>
  <nav>
    <HeaderLink href="/">
      <Image src={logo} class="logo" height={50} />
    </HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/wuz_tweets" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/wuz" target="_blank">
      GitHub
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 2em 0 2em;
  }
  header nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .logo {
    height: 100%;
    filter: invert();
  }
</style>
